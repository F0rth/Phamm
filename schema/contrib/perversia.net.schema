attributetype ( 1.3.6.1.4.1.34102.1.1.1
	NAME 'jabberID'
	DESC 'Jabber-ID'
	EQUALITY caseIgnoreIA5Match
	SUBSTR caseIgnoreIA5SubstringsMatch
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.26{256} )

attributetype ( 1.3.6.1.4.1.34102.1.1.2
	Name 'jabberAccess'
        DESC 'Account status: enabled or disabled'
        EQUALITY booleanMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
	SINGLE-VALUE )

attributetype ( 1.3.6.1.4.1.34102.2.1.1
        Name 'CalDavAccess'
        DESC 'Account status: enabled or disabled'
        EQUALITY booleanMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
        SINGLE-VALUE )


objectclass ( 1.3.6.1.4.1.34102.1.2.1
        NAME 'JabberAccount'
        SUP top
	AUXILIARY
        DESC 'Jabber account'
        MUST (	jabberID $
		JabberAccess $
		userPassword) )

objectclass ( 1.3.6.1.4.1.34102.2.2.1
        NAME 'CalDavAccount'
        SUP top
        AUXILIARY
        DESC 'CalDav account'
        MUST (  CalDavAccess $
                userPassword) )
